<%- include('partials/header.ejs')%>
     <div class="container">
        <div class="col-md-6">
            <%if(order.productName){%>
                <h4 class="mb-4">Leave a review for <Strong class="ordpd"><a href="/products/<%=order.productId%>/"><%=order.productName%></a></Strong></h4>
                <small>Your email address will not be published. Required fields are marked *</small>
                     <form action="/products/<%=order.productId%>/reviews/<%=order.orderID%>" method="post">
                <div class="form-group">
                    <label for="message">Your Review *</label>
                    <textarea name="review[info]" id="message" cols="30" rows="5" class="form-control" required></textarea>
                </div>
                <div class="form-group">
                    <label for="name">Your Name *</label>
                    <input name="review[author]" type="text" class="form-control" id="name" required>
                </div>
                <div class="form-group mb-0">
                    <input type="submit" value="Leave Your Review" class="btn btn-primary px-3">
                </div>
            </form>
            <%}%>
        </div>

            <%if(order.cart.length > 0) {%>
                <h2 class="text-center">Review any of the products you ordered</h2> 
                    <hr>
                <div class="row">
       <%order.cart.forEach(function(pd){%>
               <div class="col-md-6 col-lg-4">
               <h4 class="mb-4">Leave a review for <strong class="ordpd"><a href="/products/<%=pd.productID%>"><%=pd.name%></a></strong></h4>
                 <form action="/products/<%=pd.productID%>/reviews/<%=order.orderID%>" method="post">
           <div class="form-group">
                <label for="message">Your Review *</label>
                <textarea name="review[info]" id="message" cols="30" rows="5" class="form-control" required></textarea>
                </div>
         <div class="form-group">
               <label for="name">Your Name *</label>
              <input name="review[author]" type="text" class="form-control" id="name" required>
               </div>
         <div class="form-group mb-0">
             <input type="submit" value="Leave Your Review" class="btn btn-primary px-3">
      </div>
        </form>
                </div>
               <%})%>
            <%}%>
              </div>
     </div>

<%- include('partials/footer.ejs')%>